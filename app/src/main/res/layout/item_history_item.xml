<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Item Name -->
        <TextView
            android:id="@+id/text_view_item_name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Name" />

        <!-- Quantity Present -->
        <TextView
            android:id="@+id/text_view_quantity_present"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantità presente: 0" />

        <!-- Quantity Ordered -->
        <TextView
            android:id="@+id/text_view_quantity_ordered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantità da ordinare: 0" />

        <TextView
            android:id="@+id/text_view_portions_per_weekend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fabbisogno weekend: 0" />

        <TextView
            android:id="@+id/text_view_delivery_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data di consegna: " />

        <TextView
            android:id="@+id/text_view_provider_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fornitore: " />

        <!-- Note -->
        <TextView
            android:id="@+id/text_view_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note: " />

    </LinearLayout>

</LinearLayout>
